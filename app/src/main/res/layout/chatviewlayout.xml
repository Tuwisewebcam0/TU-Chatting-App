<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/FloralWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="-5dp">

    </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Profile Name Here"
            android:layout_toRightOf="@+id/cardviewofuser"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/nameofuser"
            android:textColor="@color/Iridium">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Status Here"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="3dp"
            android:id="@+id/userstatus"
            android:layout_below="@+id/nameofuser"
            android:layout_toRightOf="@id/cardviewofuser"
            android:textColor="#CC8216">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/cardviewofuser"
            android:layout_marginBottom="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">


            <ImageView

                android:id="@+id/imageviewofuser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                tools:ignore="ImageContrastCheck">

            </ImageView>


        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:backgroundTint="#CC8216"
            android:background="#CC8216"
            android:layout_below="@+id/cardviewofuser"
            android:layout_toRightOf="@+id/cardviewofuser"
            android:layout_marginTop="-5dp"/>



</RelativeLayout>